{
  "name": "movie-buff-api",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Srikanth Mangipudi",
    "url": "https://github.com/msrikanth508"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "netlify-lambda": "^2.0.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.1",
    "serverless-http": "^2.5.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/runtime": "^7.10.5",
    "copyfiles": "^2.3.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^25.1.0",
    "prettier": "^2.0.5"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "start": "npm run prod",
    "build": "NODE_ENV=production npm-run-all clean transpile move:index",
    "prod": "netlify-lambda build dist-server ",
    "dev-serve": "node dist-server/bin/www.js",
    "dev": "NODE_ENV=development npm-run-all build dev-serve",
    "transpile": "babel ./server --out-dir dist-server",
    "move:index": "copyfiles -f ./server/index.html dist-server",
    "clean": "rimraf dist-server functions",
    "watch:dev": "nodemon",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:msrikanth508/movie-buff.git"
  }
}
